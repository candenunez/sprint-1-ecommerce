<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head') %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->
<main class="main-register">
	<h2 class="products-title">Editando Producto </h2> 
	<div class="container products-wrapper">
		<div class="row">
			
		</div>
		<div class="col-12">
			<form action="/products/edit/method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price"  class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount"  class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<br><label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Pulseras</option>
							<option value="in-sale">Dijes</option>
							<option value="visited">Cadenitas</option>
							<option value="in-sale">Aros</option>
						</select>
					</div>
					<div class="col-12">
						<br><label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description"  class="form-input"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

</main>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>

