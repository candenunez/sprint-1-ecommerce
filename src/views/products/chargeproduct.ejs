<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Cargar'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	<main class="main-register">
		<h2 class="products-title">Formulario de creación de productos</h2>
	<div class="container products-wrapper">
		<div class="row">
			
		</div>
		<div class="col-12">
			<form action="/products/store" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Anillo ruby" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input"><br><br>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<br><label for="category" class="form-label">Categorías:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Pulseras</option>
							<option value="in-sale">Dijes</option>
							<option value="visited">Cadenitas</option>
							<option value="in-sale">Aros</option>
							
						</select>
					</div>
					<div class="col-12">
						<br><label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
</main>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>